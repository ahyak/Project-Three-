          <% if (user.local.email != null) { %>
            <div class="info">
            <h1><%= user.local.firstname %></h1>
            <img src="https://avatars.io/gravatar/<%= user.local.email %>/140" class="img-circle"><br>
          </div>
          <div class="info">
            <article class="user-info">
              <strong>email</strong>: <%= user.local.email %><br>
              <strong>First Name</strong>: <%= user.local.firstname %><br>
              <strong>Last Name</strong>: <%= user.local.lastname %><br>
              <strong>id</strong>: <%= user._id %><br>
            </article>
          </div>
          <% } %>

          <% if (user.facebook.email != null) { %>
            <div class="right-info">
              <h1><%= user.facebook.name %></h1>
              <h4 class="fa fa-facebook"> Facebook</h4><br>
              <img src="https://avatars.io/gravatar/<%= user.facebook.email %>/140" class="img-circle"><br>
            </div>
            <div class="left-info">
              <article class="user-info">
                <strong>id</strong>: <%= user.id %><br>
                <strong>email</strong>: <%= user.facebook.email %><br>
                <strong>name</strong>: <%= user.facebook.name %>
              </article>
            </div>
          <% } %>

        </div>
      </div>



        <div class="col-md-6">
          <div class="">
            <h2 class="">List</h2>
            <article class="users">
               <% lists.forEach((list) => { %>
                  <% if (list.user.id == user.id) { %>
                    <a href="/lists/<%=list._id%>"><div class="user-lists">
                      <h3> <%= list.title %> | <%= list.type %> | <%= list.location.title %></h3>
                    </div></a>
                  <% } %>
                <% }) %>
            </article>
          </div>
        </div>
      </div>
</div>



<% if(user.local.isAdmin || user.facebook.isAdmin) { %>
  <div type="button" class="btn btn-success">
    <a href="/users">All users</a>
  </div>
<% } %>

<div type="button" class="btn btn-warning">
  <a href="/profile/<%=user._id%>/edit">Edit Profile</a>
</div>

<!-- <button><a href="/profile/<%=user._id%>">delete user</a></button> -->

  <div type="button" class="btn btn-info">
    <a href="/profile/<%=user._id%>/lists/new">Add a List</a>
  </div>
  <br>

  <div class="modal-footer">
     <form class="delete-btn" action="/profile/<%=user.id%>?_method=DELETE" method="POST">
       <button type="submit" class="btn btn-danger">Delete Account</button>
     </form>
   </div>
 </div>



